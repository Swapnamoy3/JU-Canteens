<%- layout("/_layouts/boilerpalte_login.ejs") %>

    <section class="main ">
        <div class="intro">
        <h1>Login to JU Canteens</h1>
        </div>

        <div id="contact-box">
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="username">Name/Email: </label>
                    <input type="text" name="username" id="username" placeholder="Enter your name/email">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="text" name="password" id="password" placeholder="Enter your password">
                </div>
                <div class="links">
                    <a href="#">Forgot password?</a>
                </div>
                <div class="links">
                    <p>Don't have an Account yet? <a href="/signup">Create an Account</a></p>
                </div>
                <div class="sec">
                    <button class="btn center">Login</button>
                </div>
            </form>
            

        </div>

       
        
    </section>

    
